{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/mobx",
    "rootDir": "./lib/mobx",
    "emitDeclarationOnly": true,
    "incremental": false,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["lib/mobx"]
}
