{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./lib",
    "incremental": false,
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["lib"]
}
