#!/usr/bin/env node

/* tslint:disable */
// check if we're running in dev mode
const devMode = process.env.NODE_ENV === 'test'

if (!devMode) {
  // this runs from the compiled javascript source
  const cli = require(`${__dirname}/../build/cli`).run(process.argv)
  async function run() {
    try {
      cli.parse(process.argv, { run: false })
      await cli.runMatchedCommand()
    } catch (error) {
      console.error(error.stack)
      process.exit(1)
    }
  }

  run()
} else {
  // this runs from the typescript source (for dev only)
  // hook into ts-node so we can run typescript on the fly
  require('ts-node').register({ project: `${__dirname}/../tsconfig.json` })
  // run the CLI with the current process arguments
  const cli = require(`${__dirname}/../cli/cli`).cli

  async function run() {
    try {
      cli.parse(process.argv, { run: false })
      await cli.runMatchedCommand()
    } catch (error) {
      console.error(error.stack)
      process.exit(1)
    }
  }

  run()
}
