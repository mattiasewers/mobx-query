{
  "compilerOptions": {
    "inlineSourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": false,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "./build",
    "rootDir": "./src",
    "incremental": false
  },
  "exclude": ["node_modules", "test", "dist"],
  "include": ["src"]
}
